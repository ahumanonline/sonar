<div class="relative w-full h-full bg-gray-100 dark:bg-gray-700">
    <div class="absolute hidden w-full lg:block h-96"></div>
    <div class="relative px-4 py-16 mx-auto sm:max-w-xl md:max-w-full lg:max-w-screen-xl md:px-24 lg:px-8 lg:py-20">
        <div class="max-w-xl mb-10 md:mx-auto sm:text-center lg:max-w-2xl md:mb-12 ">
            <h2 class="max-w-lg mb-6 font-sans text-3xl font-bold leading-none tracking-tight sm:text-4xl md:mx-auto"><span class="relative inline-block">{{> "decorators/svg-headline"}}<span class="relative">Get access</span></span> to <br />Ultrasound Guidance</h2>
        </div>
        <div class="grid max-w-screen-md gap-10 sm:mx-auto md:mx-auto">
            {{#get "tiers" include="yearly_price,benefits" filter="slug:m2" as |tiers|}}
            {{#foreach tiers}}
            <div class="max-w-fit mx-auto text-center">
                <div class="p-8 bg-gray-900 rounded">
                    <div class="mb-4 text-center">
                        <p class="text-xl font-medium tracking-wide text-gray-100">{{name}}</p>
                        <div class="flex items-center justify-center">
                            <p class="mr-2 text-5xl font-semibold text-white lg:text-6xl">{{price yearly_price currency=currency}}</p><p class="text-lg text-gray-400">/ year</p>
                        </div>
                    </div>
                <ul class="benefit-list">
                    {{#foreach benefits as |benefit|}}
                    <li class="benefit-item">
                        <div class="mr-3">
                            <svg class="w-4 h-4 text-tertiary-400" viewBox="0 0 24 24" stroke-linecap="round" stroke-width="2"><polyline fill="none" stroke="currentColor" points="6,12 10,16 18,8"></polyline><circle cx="12" cy="12" fill="none" r="11" stroke="currentColor"></circle></svg>
                        </div>
                        <p class="benefit-text">
                            {{benefit}}
                        </p>
                    </li>
                    {{/foreach}}
                </ul>
                <div class="mb-4 text-center"
                    <p class="text-2xl font-medium tracking-wide"><a class="btn" href="javascript:" data-portal="signup/{{id}}/yearly">Sign Up</a></p>
                </div>
            </div>
            {{> "decorators/svg-shadow-box"}}
            </div>
            {{/foreach}}
            {{/get}}
        </div>
    </div>
</div>
