<div class="overflow-hidden transition-shadow duration-300 rounded">
    <a href="{{url}}" aria-label="{{title}}">
        <img src="{{#if custom_excerpt}}excerpt{{else}}https://images.pexels.com/photos/932638/pexels-photo-932638.jpeg?auto=compress&amp;cs=tinysrgb&amp;dpr=3&amp;h=750&amp;w=1260{{/if}}" class="object-cover w-full h-64 rounded" alt="{{title}}" />
    </a>
    <div class="py-5">
        <a href="{{url}}" aria-label="Article" class="inline-block mb-3 {{#has tag="#spasticity"}}lnk{{/has}}">
            <p class="text-2xl font-bold leading-5">{{title}}</p>
            <p>{{#tag}}{{name}}{{/tag}}</p>
        </a>
    </div>
</div>